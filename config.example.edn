{:git {:committer-name "ChronDB"
      :committer-email "chrondb@example.com"
      :default-branch "main"
      :sign-commits false

      ;; Remote repository configuration
      ;; Uncomment and set :remote-url to enable remote sync
      ;; :remote-url "git@github.com:your-org/your-db-repo.git"

      :push-enabled true    ; Push commits to remote after each write
